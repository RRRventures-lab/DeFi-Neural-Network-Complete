# FastAPI Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_ENV=development
LOG_LEVEL=INFO

# Authentication
# Generate a secure password hash using: python3 -c "import hashlib; print(hashlib.sha256(b'your_password').hexdigest())"
# Default password: "admin" -> hash: "8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918"
ADMIN_PASSWORD_HASH=8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918

# API Keys (for real data sources)
POLYGON_IO_API_KEY=your_polygon_api_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Broker Configuration
BROKER_API_URL=https://paper-trading-api.broker.com
BROKER_API_KEY=your_broker_api_key_here

# Data Source Configuration
DATA_SOURCE_URL=https://api.polygon.io
DATA_API_KEY=your_data_api_key_here

# Database Configuration (optional)
DATABASE_URL=sqlite:///./trading.db
# For PostgreSQL: postgresql://user:password@localhost/trading

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
PRODUCTION_FRONTEND_URL=https://defi-neural-network.vercel.app

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Trading Configuration
TRADING_MODE=paper
MAX_POSITIONS=20
MAX_DRAWDOWN_PERCENT=0.15
MAX_DAILY_LOSS_PERCENT=0.02

# Performance Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=365

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://defi-neural-network.vercel.app
SECRET_KEY=your_secret_key_for_session_management
